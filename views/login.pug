  body
    //-
      **********************************************************************************************************************************************************
      MAIN CONTENT
      ***********************************************************************************************************************************************************
    #login-page
      .container
        form.form-login(action='')
          h2.form-login-heading sign in now
          .login-wrap
            input.form-control(type='text', placeholder='User ID', autofocus='')
            br
            input.form-control(type='password', placeholder='Password')
            label.checkbox
              span.pull-right
                a(data-toggle='modal', href='login.html#myModal')  Forgot Password?
            button.btn.btn-theme.btn-block(href='index.html', type='submit')
              i.fa.fa-lock
              |  SIGN IN
            hr
            .login-social-link.centered
              p or you can sign in via your social network
              button#facebook.btn.btn-facebook(type='submit')
                i.fa.fa-facebook
                |  Facebook
              button#twitter.btn.btn-twitter(type='submit')
                i.fa.fa-twitter
                |  Twitter
              button#google.btn.btn-google(type='submit')
                i.fa.fa-twitter
                |  Google
            .registration
              | Don&apos;t have an account yet?
              br
              a(href='#')
                | Create an account
          // Modal
          #myModal.modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', tabindex='-1')
            .modal-dialog
              .modal-content
                .modal-header
                  button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                  h4.modal-title Forgot Password ?
                .modal-body
                  p Enter your e-mail address below to reset your password.
                  input.form-control.placeholder-no-fix(type='text', name='email', placeholder='Email', autocomplete='off')
                .modal-footer
                  button.btn.btn-default(data-dismiss='modal', type='button') Cancel
                  button.btn.btn-theme(type='button') Submit
          // modal
    // js placed at the end of the document so the pages load faster
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.min.js')
