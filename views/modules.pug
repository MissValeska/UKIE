doctype html
html
  include includes/head.pug
  body
    section#container
      //
        **********************************************************************************************************************************************************
        TOP BAR CONTENT & NOTIFICATIONS
        ***********************************************************************************************************************************************************
      // header start
      header.header.black-bg
        .sidebar-toggle-box
          .fa.fa-bars.tooltips(data-placement='right', data-original-title='Toggle Navigation')
        // logo start
        a#homelink.logo(href='/')
          b Ukie App
        // logo end
        #top_menu.nav.notify-row
          // notification start
          ul.nav.top-menu
            // inventory dropdown start
            li#header_inbox_bar.dropdown
              a.dropdown-toggle(data-toggle='dropdown', href='index#')
                i.fa.fa-tasks
                span#totalcount.badge.bg-theme
              ul#inventorybox.dropdown-menu.extended.inbox
                .notify-arrow.notify-arrow-blue
                li
                  p#itemnum.blue
                script.
                  getInventory(0);
                  getInventory(10);
                  document.getElementById("homelink").setAttribute("href", "profile");
            // inventory dropdown end
            // inbox dropdown start
            li#header_inbox_bar.dropdown
              a.dropdown-toggle(data-toggle='dropdown', href='/#')
                i.fa.fa-users
                span.badge.bg-theme03 5
              ul.dropdown-menu.extended.inbox
                .notify-arrow.notify-arrow-green
                li
                  p.green You have #{friends} friends
                  
                  //https://pugjs.org/language/case.html
                  
                  
                li
                  a(href='/#')
                    span.photo
                      img(alt='avatar', src='img/ui-zac.jpg')
                    span.subject
                      span.from Zac Snider
                      span.time Just now
                    span.message
                      | Wants to connect with you
                li
                  a(href='/#')
                    span.photo
                      img(alt='avatar', src='img/ui-divya.jpg')
                    span.subject
                      span.from Divya Manian
                      span.time 40 mins.
                    span.message
                      | Completed Alphabet Module
                li
                  a(href='/#')
                    span.photo
                      img(alt='avatar', src='img/ui-danro.jpg')
                    span.subject
                      span.from Dan Rogers
                      span.time 2 hrs.
                    span.message
                      | Reached Level 5
                li
                  a(href='/#')
                    span.photo
                      img(alt='avatar', src='img/ui-sherman.jpg')
                    span.subject
                      span.from Dj Sherman
                      span.time 4 hrs.
                    span.message
                      | Joined Ukie
                li
                  a(href='/friends') See all friends
            // inbox dropdown end
          // notification end
        .top-menu
          ul.nav.pull-right.top-menu
            li
              a#logout.logout(href='/') Logout
              script.
                logout();
      // header end
      //
        **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        ***********************************************************************************************************************************************************
      // sidebar start
      aside
        #sidebar.nav-collapse
          // sidebar menu start
          ul#nav-accordion.sidebar-menu
            p.centered
              a(href='profile')
                img#userimg.img-circle(src='', width='60')
            h5#username.centered
            script.
              getProfileUrl();
              getUsername();
            li.mt
              a.active(href='profile')
                i.fa.fa-dashboard
                span Dashboard
            li.sub-menu
              a#practice(href='modules')
                i.fa.fa-graduation-cap
                span Practice
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-lightbulb-o
                span Grammar Tips
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-book
                span Stories
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-star-half-o
                span Badges
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-users
                span Friends
            li.sub-menu
              a(href='javascript:;')
                i.fa.fa-comments
                span Discussions
              li.sub-menu
                a(href='javascript:;')
                  i.fa.fa-cog
                  span Settings
              li.sub-menu
                a(href='javascript:;')
                  i.fa.fa-info-circle
                  span About
              li.sub-menu
                a(href='javascript:;')
                  i.fa.fa-envelope
                  span Contact
          // sidebar menu end
      // sidebar end
    //
      **********************************************************************************************************************************************************
      MAIN CONTENT
      ***********************************************************************************************************************************************************
    // main content start
    section#main-content
      section.wrapper
          .row
            .col-lg-12
              .row.mt
            //script. getModuleData();
      // main content end
      // footer start
      footer.site-footer
      .text-center
        | Â©2017 Ukie. All rights reserved
        a.go-top(href='/#')
          i.fa.fa-angle-up
      // footer end
