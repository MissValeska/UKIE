                      var doughnutData = [
                      {
                      value: 60,
                      color:"#68dff0"
                      },
                      {
                      value : 40,
                      color : "#444c57"
                      }
                      ];
                      var myDoughnut = new Chart(document.getElementById("serverstatus02").getContext("2d")).Doughnut(doughnutData);
                    p April 17, 2014
                    footer
                      .pull-left
                        h5
                          i.fa.fa-hdd-o
                          |  17 GB
                      .pull-right
                        h5 60% Used
                // /col-md-4
                .col-md-4.mb
                  // INSTAGRAM PANEL
